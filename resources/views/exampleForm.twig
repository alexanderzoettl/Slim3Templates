{% extends 'templates/app.twig' %}

{% block content %}

<h1>Example Form</h1>

<div class="row">

		<div class="col-md-6.col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Form</div>
				<div class="panel-body">
					<form action="{{ path_for('exampleForm') }}" method="post" autocomplete = "off">

						<!-- FIELD 1 -->
						<div class="form-group{{ errors.field1 ? ' has-error' : '' }}">
							<label for="field1">field1</label>
							<input type="text" name="field1" class="form-control" value="{{ old.field1 }}">
						</div>
						{% if errors.field1 %}
							<span class="help-block"><font color="red">{{ errors.field1 }}</font></span>
						{% endif %}
						<!-- END FIELD 1 -->
						<!-- FIELD 2 -->
						<div class="form-group{{ errors.field2 ? ' has-error' : '' }}">
							<label for="field2">field2</label>
							<input type="text" name="field2" class="form-control" value="{{ old.field2 }}">
						</div>
						{% if errors.field2 %}
							<span class="help-block"><font color="red">{{ errors.field2 }}</font></span>
						{% endif %}
						<!-- END FIELD 2 -->
						<!-- FIELD 3 -->
						<div class="form-group{{ errors.field3 ? ' has-error' : '' }}">
							<label for="field3">field3</label>
							<input type="text" name="field3" class="form-control" value="{{ old.field3 }}">
						</div>
						{% if errors.field3 %}
							<span class="help-block"><font color="red">{{ errors.field3 }}</font></span>
						{% endif %}
						<!-- END FIELD 3 -->

						<button type="submit" class="btn btn-default">Submit</button>

						{{ csrf.field | raw }}
						
					</form>
				</div>
			</div>
		</div>	
</div>

{% endblock %}