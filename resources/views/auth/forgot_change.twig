{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">

		<div class="col-md-6.col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Passwort Zurücksetzen</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.forgot') }}" method="post" autocomplete = "off">

						<div class="form-group{{ errors.password ? ' has-error' : '' }}">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" class="form-control">
						</div>
						{% if errors.password %}
							<span class="help-block"><font color="red">{{ errors.password }}</font></span>
						{% endif %}

						<div class="form-group{{ errors.confirm_password ? ' has-error' : '' }}">
							<label for="confirm_password">Passwort Wiederholen</label>
							<input type="password" name="confirm_password" id="confirm_password" class="form-control">
						</div>
						{% if errors.confirm_password %}
							<span class="help-block"><font color="red">{{ errors.confirm_password }}</font></span>
						{% endif %}

						<input type="hidden" name="type" value="change">
						<input type="hidden" name="code" value="{{ code }}">

						<button type="submit" class="btn btn-default">Zurücksetzen</button>

						{{ csrf.field | raw }}
						
					</form>
				</div>
			</div>
		</div>	

	</div>


{% endblock %}