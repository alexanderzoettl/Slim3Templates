{% extends 'templates/app.twig' %}

{% block content %}

	<div class="row">

		<div class="col-md-6.col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Passwort zurücksetzen</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.forgot') }}" method="post" autocomplete = "off">

						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							<label for="email">Email Addresse</label>
							<input type="text" name="email" id="email" class="form-control">
						</div>
						{% if errors.email %}
							<span class="help-block"><font color="red">{{ errors.email }}</font></span>
						{% endif %}
						
						<input type="hidden" name="type" value="email">
						<button type="submit" class="btn btn-default">Passwort zurücksetzen</button>

						{{ csrf.field | raw }}
						
					</form>
				</div>
			</div>
		</div>	

	</div>


{% endblock %}